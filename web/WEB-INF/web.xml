<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>SearchService</servlet-name>
        <servlet-class>com.garage48.server.service.SearchServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExpenseService</servlet-name>
        <servlet-class>com.garage48.server.service.AddExpenseServiceImpl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductReleaseAlertService</servlet-name>
        <servlet-class>com.garage48.server.service.ProductReleaseAlertServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchService</servlet-name>
        <url-pattern>/com.garage48.Mycash/searchservice</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
        <url-pattern>/auth</url-pattern>
        <url-pattern>/auth/*</url-pattern>
        <url-pattern>/signup</url-pattern>
        <url-pattern>/signup/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExpenseService</servlet-name>
        <url-pattern>/com.garage48.Mycash/service/addexpenseservice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductReleaseAlertService</servlet-name>
        <url-pattern>/com.garage48.Mycash/service/productreleasealertservice</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>welcomeGWT.html</welcome-file>
    </welcome-file-list>
</web-app>
